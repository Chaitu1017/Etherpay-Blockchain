<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
  <%- include('partials/nav') %>

  <main class="max-w-xl mx-auto py-12 px-6">
    <div class="bg-white shadow-xl rounded-lg p-8">
      <!-- Profile Avatar -->
      <div class="flex flex-col items-center mb-6">
        <div class="relative w-28 h-28 mb-4">
          <img src="<%= user.avatar || '/default-avatar.png' %>" alt="Avatar"
               class="w-full h-full object-cover rounded-full border-4 border-indigo-500 shadow-md">
          <form action="/profile/avatar" method="POST" enctype="multipart/form-data"
                class="absolute bottom-0 right-0">
            <input type="file" name="avatar" accept="image/*"
                   onchange="this.form.submit()"
                   class="opacity-0 absolute inset-0 cursor-pointer">
            <div class="bg-indigo-600 text-white text-xs px-2 py-1 rounded-full shadow hover:bg-indigo-700 transition cursor-pointer">
              ‚úèÔ∏è
            </div>
          </form>
        </div>
        <h2 class="text-2xl font-bold text-indigo-600">Your Profile</h2>
      </div>

      <!-- Profile Info -->
      <div class="space-y-4 text-gray-800 text-sm sm:text-base">
        <div class="flex justify-between">
          <span class="font-medium text-gray-500">Email</span>
          <span><%= user.email %></span>
        </div>
        <div class="flex justify-between">
          <span class="font-medium text-gray-500">Wallet</span>
          <span class="truncate w-48 text-right"><%= user.walletAddress || 'Not connected' %></span>
        </div>
      </div>

      <!-- Logout -->
      <form action="/logout" method="POST" class="mt-8">
        <button type="submit"
                class="w-full bg-gradient-to-r from-red-500 to-red-600 text-white py-3 rounded-lg text-lg font-semibold shadow hover:from-red-600 hover:to-red-700 transition">
          üîì Logout
        </button>
      </form>
    </div>
  </main>

  <%- include('partials/scripts') %>
</body>
</html>
