<% const tab = typeof activeTab !== 'undefined' ? activeTab : ''; %>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
  <!-- Wallet Balance -->
  <div class="bg-white rounded-xl shadow-md p-6">
    <h2 class="text-xl font-bold mb-4">Wallet Balance</h2>
    <div class="flex justify-between mb-2">
      <span class="text-gray-600">ETH Balance</span>
      <span id="ethBalance" class="font-bold">0.00 ETH</span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-600">USD Value</span>
      <span id="usdBalance" class="font-bold">$0.00</span>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white rounded-xl shadow-md p-6 md:col-span-2">
    <h2 class="text-xl font-bold mb-4">Quick Actions</h2>
    <div class="flex gap-4 flex-col sm:flex-row">
      <a href="/send" class="w-full bg-indigo-600 text-white py-3 rounded-lg text-center hover:bg-indigo-700 transition">
        Send ETH
      </a>
      <a href="/receive" class="w-full border border-indigo-600 text-indigo-600 py-3 rounded-lg text-center hover:bg-indigo-50 transition">
        Receive ETH
      </a>
    </div>
  </div>
</div>

<!-- Tabs Section -->
<div class="bg-white rounded-xl shadow-md p-6">
  <div class="border-b flex gap-8 mb-4">
    <a href="/dashboard" class="pb-2 font-semibold <%= tab === 'dashboard' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-indigo-600' %>">
      Dashboard
    </a>
    <a href="/transactions" class="pb-2 font-semibold <%= tab === 'transactions' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-indigo-600' %>">
      Transactions
    </a>
    <a href="/settings" class="pb-2 font-semibold <%= tab === 'settings' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-indigo-600' %>">
      Settings
    </a>
  </div>

  <% if (tab === 'dashboard') { %>
    <div class="text-gray-500 text-center py-10">
      <i class="fas fa-exchange-alt text-4xl mb-3"></i>
      <p>No recent transactions</p>
    </div>
  <% } %>
</div>

<!-- Ethereum Stats -->
<!-- Enhanced ETH Metrics: Price, Conversion & Gas Fee -->
<div class="bg-white rounded-xl shadow-md p-6 mt-6 space-y-6">
  <h2 class="text-2xl font-bold text-center text-indigo-700">Advanced Ethereum Metrics</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <!-- Price & Conversion -->
    <div class="text-center border rounded-lg p-4 hover:shadow transition">
      <p class="text-gray-500">ETH Price</p>
      <p id="ethUsd" class="text-3xl font-bold">$... USD</p>
      <p id="ethInr" class="text-xl text-gray-600">â‚¹... INR</p>
      <p class="text-sm text-gray-500">24h: <span id="ethPct">--%</span></p>
    </div>

    <!-- Gas Fee Estimates -->
    <div class="border rounded-lg p-4 hover:shadow transition">
      <p class="text-gray-500 mb-2">Gas Fee (Gwei)</p>
      <div class="flex justify-around">
        <div class="text-center">
          <p class="font-semibold">Safe</p>
          <p id="gasSafe">--</p>
        </div>
        <div class="text-center">
          <p class="font-semibold">Standard</p>
          <p id="gasStd">--</p>
        </div>
        <div class="text-center">
          <p class="font-semibold">Fast</p>
          <p id="gasFast">--</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Mini Sparkline -->
  <canvas id="ethSparkChart" height="100"></canvas>
</div>

